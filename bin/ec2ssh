#!/usr/bin/env ruby

begin
  require 'ec2ssh'
rescue LoadError
  require 'rubygems'
  require 'ec2ssh'
end

require 'optparse'

# Unset EC2_URL it can cause problems with aws gem
ENV["EC2_URL"] = nil

# Detect if first param has no "-". That means that its the account
account = if ARGV[0] && ! ARGV[0].to_s.match(/^-/)
  ARGV.shift || "default"
end

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: ec2ssh [ACCOUNT] [options]"

  opts.on("-f FILTER", 'Filter host names by tag') do |v|
    options[:filter] = v.to_s
  end

end.parse!(ARGV)

ec2ssh = Ec2ssh::App.new("~/.ec2ssh", (account || "default").to_sym)
ec2ssh.select_instance([], options[:filter] )
